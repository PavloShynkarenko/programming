#include <stdio.h> // Підключаємо бібліотеку для введення/виведення даних

int function(int x, int y) // Функція для обчислення кількості кроків
{
    if (x == y) // Якщо значення x дорівнює значенню y
    {
        return 0; // Повертаємо 0 (кількість кроків = 0)
    }

    int a = 1, b = y - x; // Ініціалізуємо змінні a та b

    while (b > a) // Виконується, поки b > a
    {
        if (b <= 2 * a) // Якщо b менше або дорівнює 2 * a
        {
            b = 0; // Присвоюємо b значення 0
        }
        a++; // Збільшуємо значення a на 1
    }

    return a; // Повертаємо значення a (кількість кроків)
}

int main() // Головна функція
{
    int x, y; // Оголошуємо змінні x та y

    printf("Enter x: "); // Виводимо повідомлення для введення значення x
    scanf("%d", &x); // Зчитуємо значення x з консолі

    printf("Enter y: "); // Виводимо повідомлення для введення значення y
    scanf("%d", &y); // Зчитуємо значення y з консолі

    printf("\nResult: %d", function(x, y)); // Виводимо результат виклику функції function

    return 0; // Повертаємо 0 (успішне завершення програми)
}
